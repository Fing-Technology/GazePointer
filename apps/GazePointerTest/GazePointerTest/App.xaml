                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="NearClick8">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Splash">
